# ==============================================================================
# CONFIGURAÇÕES GERAIS DA APLICAÇÃO
# ==============================================================================
SPRING_APPLICATION_NAME="teamfoundry"
# Perfil ativo: 'dev' para desenvolvimento local ou 'prod' para produção
SPRING_PROFILES_ACTIVE="dev"
FRONTEND_URL="http://localhost:5173"

# ==============================================================================
# SEGURANÇA E JWT
# ==============================================================================
# Chave secreta para assinar tokens JWT. DEVE ter pelo menos 32 caracteres.
# Em produção, use uma string aleatória longa e complexa.
JWT_SECRET="change-me-256-bit-secret-string-change-me-at-least-32-chars"
# Tempo de expiração do token em segundos (28800 = 8 horas)
JWT_EXPIRATION_SECONDS="28800"

# Oauth2 e Redirecionamentos de Login Social
OAUTH2_FRONT_SUCCESS_URL="http://localhost:5173/oauth/google/callback"

# Configurações de SSL (Localmente geralmente é false)
SERVER_SSL_ENABLED="false"
SERVER_SSL_KEY_STORE="classpath:keystore.p12"
SERVER_SSL_KEY_STORE_PASSWORD="changeit"
SERVER_SSL_KEY_STORE_TYPE="PKCS12"
SERVER_SSL_KEY_PASSWORD="changeit"
SERVER_SSL_KEY_ALIAS="teamfoundry-local"

# ==============================================================================
# E-MAIL (SMTP)
# ==============================================================================
APP_MAIL_ENABLED="true"
APP_MAIL_FROM="no-reply@example.com"
APP_PASSWORD_RESET_URL="http://localhost:5173/reset-password"

# Configurações do servidor SMTP (ex: Gmail, Brevo, Mailtrap)
SPRING_MAIL_HOST="smtp.example.com"
SPRING_MAIL_PORT="587"
SPRING_MAIL_USERNAME="your-email@example.com"
SPRING_MAIL_PASSWORD="your-email-password"
SPRING_MAIL_PROTOCOL="smtp"
SPRING_MAIL_SMTP_AUTH="true"
SPRING_MAIL_SMTP_STARTTLS_ENABLE="true"

# ==============================================================================
# GOOGLE OAUTH2
# ==============================================================================
# Obtenha estas credenciais no Google Cloud Console
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Escopos e URIs padrão do Google
GOOGLE_OAUTH_SCOPE_OPENID="openid"
GOOGLE_OAUTH_SCOPE_PROFILE="profile"
GOOGLE_OAUTH_SCOPE_EMAIL="email"
# URI de redirecionamento configurada no Google Cloud Console
GOOGLE_REDIRECT_URI="http://localhost:8080/login/oauth2/code/google"
GOOGLE_AUTHORIZATION_URI="https://accounts.google.com/o/oauth2/v2/auth"
GOOGLE_TOKEN_URI="https://oauth2.googleapis.com/token"
GOOGLE_USER_INFO_URI="https://www.googleapis.com/oauth2/v3/userinfo"
GOOGLE_USER_NAME_ATTRIBUTE="sub"

# ==============================================================================
# UPLOAD DE ARQUIVOS (CLOUDINARY)
# ==============================================================================
# Obtenha a URL de conexão no painel do Cloudinary
CLOUDINARY_URL="cloudinary://your_api_key:your_api_secret@your_cloud_name"
CLOUDINARY_BASE_URL="https://res.cloudinary.com/your-cloud-name/raw/upload/"

# Diretórios virtuais para organização dos arquivos no Cloudinary
APP_SITE_MEDIA_DIR="uploads/site"
APP_CERTIFICATES_UPLOAD_DIR="uploads/certificates"
APP_CV_UPLOAD_DIR="uploads/cv"
APP_SITE_MEDIA_PUBLIC_PATH="/media/site"

# Limites de upload
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE="5MB"
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE="5MB"

# ==============================================================================
# BANCO DE DADOS (POSTGRESQL - PRODUÇÃO / DEV)
# ==============================================================================
# URL de conexão JDBC. Para local: jdbc:postgresql://localhost:5432/teamfoundry
SPRING_DATASOURCE_URL_PROD="jdbc:postgresql://localhost:5432/teamfoundry"
SPRING_DATASOURCE_USERNAME_PROD="postgres"
SPRING_DATASOURCE_PASSWORD_PROD="postgres"
SPRING_DATASOURCE_DRIVER_CLASS_NAME_PROD="org.postgresql.Driver"

# JPA / Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO_PROD="update"
SPRING_JPA_SHOW_SQL_PROD="false"
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT_PROD="org.hibernate.dialect.PostgreSQLDialect"
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL="true"
SPRING_SQL_INIT_MODE_PROD="never"

# Flyway (Migração de banco de dados)
SPRING_FLYWAY_ENABLED="false"

# ==============================================================================
# CONFIGURAÇÕES DO SISTEMA (REGISTRO E LIMPEZA)
# ==============================================================================
APP_REGISTRATION_VERIFICATION_EXPIRATION_MINUTES="30"
APP_REGISTRATION_PENDING_RETENTION_MINUTES="60"
APP_REGISTRATION_PENDING_CLEANUP_INTERVAL_MS="300000"
SPRING_MAIN_ALLOW_BEAN_DEFINITION_OVERRIDING="true"

# ==============================================================================
# VARIAVEIS ESPECIFICAS DE PROD (SOBREPOSIÇÃO)
# ==============================================================================
APP_MAIL_ENABLED_PROD="true"
JWT_SECRET_PROD="change-me-prod-secret-must-be-very-secure"
JWT_EXPIRATION_SECONDS_PROD="28800"